<resources>
    
    <style name="whiteedittext" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#41443A</item>
        <item name="android:gravity">left</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:background">@drawable/whiteedittext</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Material.Light">
        <item name="android:statusBarColor">@color/notifications_bar</item>
        <item name="android:colorPrimary">@color/notifications_bar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">sans</item>
        <item name="android:statusBarColor">@color/notifications_bar</item>
        <item name="colorPrimary">@color/actionbar</item>
        <item name="colorAccent">@color/actionbar</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="AppThemeImage" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">sans</item>
        <item name="android:statusBarColor">@color/notifications_bar_picture</item>
        <item name="colorPrimary">@color/actionbar</item>
        <item name="colorAccent">@color/actionbar</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar</item>        
    </style>


    <style name="TextAppearanceTabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>