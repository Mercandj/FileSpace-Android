<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/center"
        android:layout_width="50px"
        android:layout_height="70px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </RelativeLayout>

    <EditText
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#000"
        android:editable="false"
        android:focusable="false"
        android:hint="Press long on list item"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#fff"
        android:gravity="center"
        />


    <EditText
        android:id="@+id/et_father"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#1976D2"
        android:editable="false"
        android:focusable="false"
        android:hint="Father"
        android:padding="10dp"
        android:background="#fff"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/center"
        android:layout_marginLeft="20dp"
        />


    <EditText
        android:id="@+id/et_mother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#E91E63"
        android:editable="false"
        android:focusable="false"
        android:hint="Mother"
        android:padding="10dp"
        android:background="#fff"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/et_father"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/center"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:scrollbars="vertical"
        android:layout_below="@+id/brothers_siters"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Brothers &amp; Sisters"
        android:id="@+id/brothers_siters"
        android:layout_below="@+id/user"
        android:layout_alignStart="@+id/et_father"
        android:layout_marginTop="16dp"/>


</RelativeLayout>