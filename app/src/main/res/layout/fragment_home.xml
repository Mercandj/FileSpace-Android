<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:scrollbars="vertical" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ImageButton
        android:id="@+id/circle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="25dp"
        android:background="@drawable/circle_button_ripple"
        android:elevation="@dimen/circle_button_elevation_high"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/perm_group_microphone_white"
        android:stateListAnimator="@anim/circle_button_elevation"
        android:tint="@android:color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:layout_alignBottom="@+id/circle"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/circle"
        android:layout_alignTop="@+id/circle"
        android:layout_marginLeft="25dp"
        android:background="#f0f0f0"
        android:elevation="@dimen/circle_button_elevation_high"
        android:stateListAnimator="@anim/circle_button_elevation"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="Input" />

</RelativeLayout>