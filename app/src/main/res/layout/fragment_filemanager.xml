<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="42dip"
        android:background="@color/actionbar"
        android:layout_gravity="bottom"
        android:elevation="4dp"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/TextAppearanceTabLayout"
        app:tabTextColor="@color/white_70"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorHeight="2dp"
        app:tabIndicatorColor="@color/white" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs" >

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/snackBarPosition">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/circle"
            android:transitionName="transitionFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="25dp"
            android:elevation="@dimen/circle_button_elevation_high"
            android:scaleType="fitXY"
            android:src="@drawable/add"
            android:stateListAnimator="@anim/circle_button_elevation"
            android:tint="@android:color/white"
            app:layout_anchor="@id/snackBarPosition"
            app:layout_anchorGravity="bottom|right|end"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/circle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/circle_button_elevation_high"
            android:scaleType="fitXY"
            android:src="@drawable/arrow_up"
            android:layout_gravity="bottom|right"
            android:stateListAnimator="@anim/circle_button_elevation"
            android:tint="@android:color/white"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="106dp"
            app:layout_anchor="@id/snackBarPosition"
            app:layout_anchorGravity="bottom|right|end"/>

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>