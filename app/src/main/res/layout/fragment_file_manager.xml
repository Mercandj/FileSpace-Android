<android.support.design.widget.CoordinatorLayout
    android:id="@+id/fragment_file_manager_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.TabLayout
        android:id="@+id/fragment_file_manager_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="42dip"
        android:background="@color/actionbar"
        android:elevation="4dp"
        app:tabTextAppearance="@style/TextAppearanceTabLayout"
        app:tabTextColor="@color/white"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorHeight="2dp"
        app:tabIndicatorColor="@color/white"
        android:layout_alignParentTop="false"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_file_manager_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="42dip"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/circle"
        android:transitionName="transitionFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="25dp"
        android:elevation="@dimen/circle_button_elevation_high"
        android:scaleType="fitXY"
        android:src="@drawable/add"
        android:stateListAnimator="@anim/circle_button_elevation"
        android:tint="@android:color/white"
        app:layout_anchor="@id/fragment_file_manager_coordinator_layout"
        app:layout_anchorGravity="bottom|right|end"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/circle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/circle_button_elevation_high"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_up"
        android:layout_gravity="bottom|right"
        android:stateListAnimator="@anim/circle_button_elevation"
        android:tint="@android:color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="106dp"
        app:layout_anchor="@id/fragment_file_manager_coordinator_layout"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>