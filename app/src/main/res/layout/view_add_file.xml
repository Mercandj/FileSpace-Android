<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/relativeLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:background="#fff"
        android:translationZ="16dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/addDirectory"
            android:src="@drawable/directory"
            android:scaleType="fitXY"
            android:background="#ffffffff"
            android:layout_marginStart="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/txtFile"
            android:src="@drawable/file_default"
            android:scaleType="fitXY"
            android:background="#ffffffff"
            android:layout_alignTop="@+id/addDirectory"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/uploadFile"
            android:src="@drawable/ic_menu_upload"
            android:scaleType="fitXY"
            android:background="#ccc"
            android:layout_marginEnd="50dp"
            android:layout_alignTop="@+id/txtFile"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</RelativeLayout>