<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/relativeLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:background="#fff"
        android:translationZ="16dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/rl_title"
            android:background="#ddd">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:id="@+id/textView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:background="#fff"
                android:layout_marginBottom="0.5dp"
                android:textColor="#666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_below="@+id/rl_title"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:id="@+id/addDirectory"
                android:layout_marginStart="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:background="@drawable/list_button_ripple"
                android:clickable="true">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_createpanel_folder"
                    android:id="@+id/ic_addDirectory"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Folder"
                    android:id="@+id/txt_addDirectory"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="3dp"
                    android:textColor="#666" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:id="@+id/uploadFile"
                android:layout_alignTop="@+id/addDirectory"
                android:layout_centerHorizontal="true"
                android:padding="2dp"
                android:background="@drawable/list_button_ripple"
                android:clickable="true">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/ic_uploadFile"
                    android:src="@drawable/ic_createpanel_upload"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload"
                    android:id="@+id/txt_uploadFile"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="3dp"
                    android:textColor="#666" />

            </RelativeLayout>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/scan"
                android:src="@drawable/ic_createpanel_scan"
                android:scaleType="fitXY"
                android:background="#ffffffff"
                android:layout_alignTop="@+id/addDirectory"
                android:layout_marginEnd="50dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignParentStart="true">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/txtFile"
                android:src="@drawable/ic_createpanel_doc"
                android:scaleType="fitXY"
                android:background="#ffffffff"
                android:layout_marginStart="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/b"
                android:src="@drawable/ic_createpanel_doc"
                android:scaleType="fitXY"
                android:background="#ffffffff"
                android:layout_alignTop="@+id/txtFile"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/c"
                android:src="@drawable/ic_createpanel_upload"
                android:scaleType="fitXY"
                android:background="#ffffffff"
                android:layout_marginEnd="50dp"
                android:layout_alignTop="@+id/txtFile"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>