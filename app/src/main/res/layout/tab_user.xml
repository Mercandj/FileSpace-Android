<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:ellipsize="marquee"
        android:focusable="false"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/tab_icon"
        android:layout_toStartOf="@+id/more"
        android:layout_alignTop="@+id/tab_icon"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:ellipsize="marquee"
        android:focusable="false"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="#666"
        android:textSize="15sp"
        android:layout_alignEnd="@+id/title"
        android:layout_toEndOf="@+id/tab_icon"
        android:layout_alignBottom="@+id/tab_icon"
        android:gravity="bottom"
        android:layout_marginBottom="2dp"
        />

    <com.mercandalli.android.apps.files.common.view.CircularImageView
        android:id="@+id/tab_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:contentDescription="@string/image_description"
        android:src="@drawable/file_default"/>

    <RelativeLayout
        android:id="@+id/more"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="10dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_menu_moreoverflow_normal_holo_light"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</RelativeLayout>