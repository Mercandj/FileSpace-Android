<?xml version="1.0" encoding="utf-8"?>
<merge android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="12dp"
    android:layout_width="match_parent"
    android:paddingBottom="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.SwitchCompat
                android:checked="true"
                android:id="@+id/fragment_admin_send_notification_dev_switch"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Send to dev" />

            <Spinner
                android:id="@+id/fragment_admin_send_notification_spinner"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_width="match_parent" />

        </LinearLayout>

        <EditText
            android:ems="9"
            android:hint="Title"
            android:id="@+id/fragment_admin_send_notification_title"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:lines="1"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <EditText
            android:ems="9"
            android:hint="Message"
            android:id="@+id/fragment_admin_send_notification_message"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:lines="1"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <EditText
            android:ems="9"
            android:hint="Package"
            android:id="@+id/fragment_admin_send_notification_package"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:lines="1"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <EditText
            android:ems="9"
            android:hint="Url"
            android:id="@+id/fragment_admin_send_notification_url"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:lines="1"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</merge>