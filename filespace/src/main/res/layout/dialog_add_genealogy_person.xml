<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/center"
            android:ems="10"
            android:hint="@string/genealogy_last_name"
            android:lines="1"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_first_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/center"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="@string/genealogy_first_name_1"
            android:lines="1"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_first_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et_last_name"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/et_first_name_1"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="@string/genealogy_first_name_2"
            android:lines="1"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_first_name_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/et_first_name_1"
            android:layout_alignTop="@+id/et_first_name_2"
            android:ems="10"
            android:hint="@string/genealogy_first_name_3"
            android:lines="1"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"/>

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/et_first_name_3"
            android:layout_below="@+id/bt_father"
            android:layout_marginTop="2dp"
            android:text="@string/add" />

        <RelativeLayout
            android:id="@+id/center"
            android:layout_width="50px"
            android:layout_height="70px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <CheckBox
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/add"
            android:layout_alignEnd="@+id/et_first_name_2"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="6dp"
            android:text="Is woman" />

        <EditText
            android:id="@+id/et_date_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et_first_name_3"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_first_name_2"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Birth date 1990-12-25"
            android:inputType="date"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_date_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et_first_name_3"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_date_birth"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Death date 1990-12-25"
            android:inputType="date"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/bt_marriage"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_marriage"
            android:layout_marginTop="23dp"
            android:ems="10"
            android:gravity="left|top"
            android:hint="Notes"
            android:lines="2"
            android:maxLines="4"
            android:minLines="2" />

        <Button
            android:id="@+id/bt_father"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignEnd="@+id/sex"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_description"
            android:layout_marginTop="5dp"
            android:text="Father" />

        <Button
            android:id="@+id/bt_mother"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_above="@+id/add"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/add"
            android:text="Mother" />

        <TextView
            android:id="@+id/tv_marriage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_date_death"
            android:layout_marginTop="7dp"
            android:layout_toStartOf="@+id/bt_remove_marriage"
            android:hint="Marriages"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="13sp" />

        <Button
            android:id="@+id/bt_marriage"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_marriage"
            android:layout_marginTop="-4dp"
            android:layout_toEndOf="@+id/tv_marriage"
            android:gravity="center"
            android:text="Add Marriage"
            android:textSize="10sp" />

        <Button
            android:id="@+id/bt_remove_marriage"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/bt_marriage"
            android:layout_marginTop="-8dp"
            android:gravity="center"
            android:text="Remove Marriage"
            android:textSize="10sp" />
    </RelativeLayout>

</ScrollView>