<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/header_audio_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_16"
            android:layout_marginEnd="@dimen/default_8"
            android:layout_marginStart="@dimen/default_16"
            android:layout_marginTop="@dimen/default_16"
            android:background="@drawable/file_local_audio_rounded_bg_selected"
            android:paddingBottom="@dimen/default_8"
            android:paddingLeft="@dimen/default_16"
            android:paddingRight="@dimen/default_16"
            android:paddingTop="@dimen/default_8"
            android:singleLine="true"
            android:text="FOLDER"
            android:textColor="@color/primary"
            android:textSize="@dimen/default_text_12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/header_audio_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_16"
            android:layout_marginEnd="@dimen/default_8"
            android:layout_marginStart="@dimen/default_8"
            android:layout_marginTop="@dimen/default_16"
            android:background="@drawable/file_local_audio_rounded_bg"
            android:paddingBottom="@dimen/default_8"
            android:paddingLeft="@dimen/default_16"
            android:paddingRight="@dimen/default_16"
            android:paddingTop="@dimen/default_8"
            android:singleLine="true"
            android:text="RECENT"
            android:textColor="@android:color/white"
            android:textSize="@dimen/default_text_12"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/header_audio_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_16"
            android:layout_marginEnd="@dimen/default_8"
            android:layout_marginStart="@dimen/default_8"
            android:layout_marginTop="@dimen/default_16"
            android:background="@drawable/file_local_audio_rounded_bg"
            android:paddingBottom="@dimen/default_8"
            android:paddingLeft="@dimen/default_16"
            android:paddingRight="@dimen/default_16"
            android:paddingTop="@dimen/default_8"
            android:singleLine="true"
            android:text="ARTIST"
            android:textColor="@android:color/white"
            android:textSize="@dimen/default_text_12"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/header_audio_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_16"
            android:layout_marginEnd="@dimen/default_8"
            android:layout_marginStart="@dimen/default_8"
            android:layout_marginTop="@dimen/default_16"
            android:background="@drawable/file_local_audio_rounded_bg"
            android:paddingBottom="@dimen/default_8"
            android:paddingLeft="@dimen/default_16"
            android:paddingRight="@dimen/default_16"
            android:paddingTop="@dimen/default_8"
            android:singleLine="true"
            android:text="ALBUM"
            android:textColor="@android:color/white"
            android:textSize="@dimen/default_text_12"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/header_audio_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_16"
            android:layout_marginEnd="@dimen/default_16"
            android:layout_marginStart="@dimen/default_8"
            android:layout_marginTop="@dimen/default_16"
            android:background="@drawable/file_local_audio_rounded_bg"
            android:paddingBottom="@dimen/default_8"
            android:paddingLeft="@dimen/default_16"
            android:paddingRight="@dimen/default_16"
            android:paddingTop="@dimen/default_8"
            android:singleLine="true"
            android:text="ALL"
            android:textColor="@android:color/white"
            android:textSize="@dimen/default_text_12"
            android:textStyle="bold" />

    </LinearLayout>

</HorizontalScrollView>