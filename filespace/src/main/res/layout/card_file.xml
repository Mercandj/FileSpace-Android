<android.support.v7.widget.CardView android:id="@+id/card_file_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="?android:attr/selectableItemBackground"
    android:transitionName="transitionRoot"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true">

    <TextView
        android:id="@+id/card_file_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tab_icon"
        android:layout_gravity="bottom"
        android:layout_marginBottom="36dp"
        android:layout_toEndOf="@+id/tab_icon"
        android:layout_toStartOf="@+id/more"
        android:ellipsize="marquee"
        android:focusable="false"
        android:gravity="top"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:paddingEnd="5dp"
        android:paddingStart="20dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="16sp"
        android:transitionName="transitionTitle"
        tools:text="Title" />

    <TextView
        android:id="@+id/card_file_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tab_icon"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/tab_icon"
        android:layout_toStartOf="@+id/more"
        android:ellipsize="marquee"
        android:focusable="false"
        android:gravity="bottom"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:paddingEnd="5dp"
        android:paddingStart="20dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="#666"
        android:textSize="15sp"
        tools:text="Subtitle" />

    <ImageView
        android:id="@+id/card_file_icon"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/actionbar_audio"
        android:contentDescription="@string/image_description"
        android:src="@drawable/file_audio"
        android:transitionName="transitionIcon" />

    <ImageButton
        android:id="@+id/card_file_more"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="3dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="18dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_menu_moreoverflow_normal_holo_light" />
</android.support.v7.widget.CardView>